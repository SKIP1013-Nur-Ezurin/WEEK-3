package numericData;

//Method scanner: key in method from the user
import java.util.Scanner;


public class Exercise3 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String name;
		int number;
		int num1 ;
		int num2 ;
		int num3 ;
		int num4 ;
		int num5 ;
		double bal1;
		double bal2;
		double amount;
		int sum ;
		char y;
		char n;
		
		//create new object for scanner input
		//scanMe is new object from the input
		Scanner scanMe = new Scanner(System.in);
		
		System.out.print("Please enter your name:");
		name = scanMe.nextLine();
		
		System.out.print("Please enter your balance: ");
		bal1= scanMe.nextDouble();
		
		System.out.println("Do you want to proceed : Y/N");
		y  = scanMe.next().charAt(0);
		System.out.println("YES"+ y);
		n  = scanMe.next().charAt(1);
		System.out.println("NO" +n);
		
		System.out.print("Please enter your amount: ");
		amount = scanMe.nextDouble();
		bal2 = bal1 - amount ;
		System.out.println("Your current balance is RM :"+ bal2);
		
				
		System.out.println("Please enter the first  amount: ");
		number = scanMe.nextInt();
		System.out.println("Amount is RM "+ number);
		
		System.out.println("Please enter the second amount: ");
		num1 = scanMe.nextInt();
		System.out.println("Amount is RM "+ num1);
		
		System.out.println("Please enter the third amount: ");
		num2 = scanMe.nextInt();
		System.out.println("Amount is RM "+ num2);
		
		System.out.println("Please enter the forth amount: ");
		num3 = scanMe.nextInt();
		System.out.println("Amount is RM "+ num3);
		
		System.out.println("Please enter the five amount: ");
		num4 = scanMe.nextInt();
		System.out.println("Amount is RM "+ num4);
		
		System.out.println("Please enter the sixth amount: ");
		num5 = scanMe.nextInt();
		System.out.println("Amount is RM"+ num5);
		
		System.out.println("Hi "+ name);
		sum = number + num1 + num2 +num3 +num4 + num5;
		System.out.println("The total amount is :" + sum);

	}

}
